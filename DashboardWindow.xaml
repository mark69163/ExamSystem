<Window x:Class="ExamSystem.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamSystem"
        mc:Ignorable="d"
        Title="NJE Exam System" Height="400" Width="800" Icon="/img/gamf.png">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="im00" Grid.Column="0" HorizontalAlignment="Left" Source="/img/logo2.png" Margin="10,0,0,0" Width="90"  />

        <Menu x:Name="mainMenu" Height="30" VerticalAlignment="Center" Margin="100,0,0,0" Background="Wheat">

            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Left"/>
                </ItemsPanelTemplate>

            </Menu.ItemsPanel>

            <MenuItem Header="Exams" x:Name="miQuestion" VerticalAlignment="Center"/>
            <MenuItem Header="Help" x:Name="miHelp" VerticalAlignment="Center"/>
            <MenuItem Header="Profile" x:Name="miProfile" VerticalAlignment="Center" />
            <MenuItem Header="Sign out" x:Name="miSignOut" VerticalAlignment="Center" Click="miSignOut_Click" />



        </Menu>


    </Grid>
</Window>
